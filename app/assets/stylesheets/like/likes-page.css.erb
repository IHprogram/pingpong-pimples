.likes-main {
  padding: 50px 0;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 590px;
}

.likes-content {
  background-color: #ffffff;
  width: 70%;
  margin: 0 auto;
  padding: 30px;
  border: 1px solid #000000;
  border-radius: 10px;
}

.likes-title-wrapper {
  text-align: center;
  margin-bottom: 30px;
}

.likes-title {
  font-size: 30px;
  font-weight: bold;
}