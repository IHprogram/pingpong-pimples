.likes-main {
  padding: 70px 0 50px;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.like-image-wrapper {
  width: 100%;
  max-width: 100%;
  height: 300px;
  background-image: url("<%= asset_path("like-page.jpg") %>");
  background-size: cover;
  background-position: 25% 75%;
}

.likes-content {
  background-color: #ffffff;
  width: 700px;
  margin: 50px auto 0;
  padding: 30px;
  border: 1px solid #000000;
  border-radius: 10px;
}

.likes-title-wrapper {
  text-align: center;
  margin-bottom: 30px;
}

.likes-title {
  font-size: 30px;
  font-weight: bold;
}