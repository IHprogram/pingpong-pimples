.main {
  width: 100%;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  padding: 70px 0 50px;
}

.title-contents {
  width: 100%;
  position: relative;
}

.top-img {
  width: 100%;
  max-width: 100%;
  height: 700px;
  background-image: url("<%= asset_path("top-page-image.jpg") %>");
  background-size: cover;
  background-position: center;
}

.service-title>h1 {
  position: absolute;
  top: 20px;
  left: 20px;
  color: #ffffff;
  font-size: 70px;
  text-shadow: 1px 0 5px #000000;
  word-wrap: normal;
}

.service-explain {
  position: absolute;
  bottom: 20px;
  left: 0px;
  color: #ffffff;
  font-size: 25px;
  text-shadow: 1px 0 5px #000000;
  line-height: 1.5em;
  margin: 0 15px;
}

.service-guest-login {
  margin-top: 15px;
  color: #ffffff;
  font-size: 25px;
  text-shadow: 1px 0 5px #000000;
  line-height: 1.5em;
  word-wrap: normal;
}

.guest-login-btn {
  margin-left: 10px;
  color: #00ffff;
  text-decoration: none;
}

.review-contents {
  display: flex;
  margin-top: 50px;
  flex-direction: column;
}

.main-top {
  text-align: center;
  margin: 0 auto 50px;
  width: 700px;
  border: 2px solid #808080;
}

.main-bottom {
  margin: 0 auto;
  background-color: #ffffff;
  width: 700px;
  height: 100%;
  padding: 40px 20px;
  background-color: #f5f5f5;
  border: 2px solid #808080;
  vertical-align: baseline;
}

.review-lists-title {
  text-align: center;
  margin-bottom: 40px;
}

.new-review-title {
  font-size: 25px;
  font-weight: bold;
}

.review-lists {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.list {
  list-style: none;
  width: 200px;
  height: 200px;
  margin-bottom: 30px;
}

.review-show-link {
  text-decoration: none;
}

.review-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  position: relative;
}

.review-img-content>img {
  object-fit: cover;
  width: 200px;
  height: 200px;
}

.top-review-detail {
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  width: 100%;
  padding: 10px;
}

.top-review-group {
  display: flex;
  margin: 5px 0;
}

.top-review-name {
  color: #ffffff;
  font-size: 12px;
}

.top-review-value {
  color: #ffffff;
  font-size: 12px;
  font-weight: bold;
}

.notice {
  height: 60px;
  font-size: 20px;
  background-color: #00bfff;
  color: #ffffff;
  padding: 20px;
}

.alert {
  height: 60px;
  font-size: 20px;
  background-color: #ff4500;
  color: #ffffff;
  padding: 20px;
}

.review-button {
  position: fixed;
  bottom: 80px;
  right: 10px;
  z-index: 1;
  background-color: #000000;
  padding: 15px;
  border-radius: 10px;
}

.review-button-text {
  color: #ffffff;
  text-decoration: none;
}

@media screen and (max-width: 959px) {
  .service-title>h1 {
    font-size: 40px;
  }

  .service-explain {
    font-size: 20px;
  }

  .service-guest-login {
    font-size: 14px;
  }

  .service-explain {
    font-size: 16px;
    bottom: 40px;
  }

  .guest-login-btn {
    position: absolute;
    left: 0px;
    bottom: -30px;
    margin: 0;
  }

  .main-top {
    width: 500px;
  }

  .main-bottom {
    width: 500px;
  }
}

@media screen and (max-width: 559px) {
  .service-title>h1 {
    font-size: 40px;
  }
  
  .top-img {
    height: 500px;
  }

  .main-top {
    width: 300px;
  }

  .main-bottom {
    width: 300px;
  }

  .review-lists {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
}
