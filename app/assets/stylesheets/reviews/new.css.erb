.review-main {
  font-size: 14px;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  padding: 120px 0 50px;
}

.review-wrapper {
  background-color: #ffffff;
  width: 700px;
  padding: 50px 50px;
}

.review-title {
  font-size: 30px;
  font-weight: bold;
  text-align: center;
}

.img-upload {
  flex-wrap: wrap;
  padding: 25px 0;
}


.product-text {
  width: 100%;
  padding: 16px 16px 8px;
  border-radius: 4px;
  border: 1px solid #ccc;
  font-size: 16px;
  resize: vertical;
}

.video-upload {
  margin: 50px auto;
}

.review-btn-contents {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 150px;
}

.review-btn-wrap {
  width: 100%;
  height: 44px;
  text-align: center;
}

.review-button {
  width: 300px;
  background: #000000;
  border: 1px solid ;
  color: #fff;
  line-height: 44px;
  font-size: 14px;
  cursor: pointer;
  border-radius: 30px;
}

.new-back-btn-wrapper {
  height: 100px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.new-back-btn {
  background-color: #aaaaaa;
  color: #ffffff;
  text-decoration: none;
  border-radius: 30px;
  padding: 15px 80px;
}



/* ここからは共通のCSS */

.weight-bold-text {
  font-weight: bold;
  min-width: 170px;
  margin-bottom: 10px;
}

.select-box {
  height: 30px;
  width: 100%;
  background-color: #f5f5f5;
  padding-left: 20px;
}

.detail-group {
  margin: 50px 0;
}

