.review-show {
  padding: 50px 0;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
}

.review-show-wrapper {
  background-color: #f8f8f8;
  width: 70%;
  margin: 0 auto 50px;
  padding: 35px 30px;
  border: 2px solid gray;
  background-color: #ffffff;
  min-width: 800px;
}

.review-show-image {
  width: 100%;
  text-align: center;
  margin: 0 auto;
}

.show-img {
  width: 500px;
  height: 500px;
  object-fit: contain;
}

.detail-table {
  margin: 0 auto 30px;
  width: 70%;
}

.detail-product {
  width: 20%;
  background-color: #eee;
  border: 1px solid #dedede;
  font-size: 14px;
  text-align: center;
}

.detail-value {
  width: 80%;
  padding: 20px;
  border: 1px solid #dedede;
  font-size: 14px;
}

.detail-content-title {
  background-color: #eee;
  border: 1px solid #dedede;
  font-size: 14px;
}

.product-content {
  width: 70%;
  margin: 30px auto;
  border: 1px solid #dedede;
}

.review-buttons {
  height: 60px;
  width: 50%;
  margin: 30px auto 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.edit-btn-wrapper {
  background-color: black;
  padding: 15px;
  border-radius: 30px;
  width: 15vw;
  text-align: center;
}

.edit-btn {
  text-decoration: none;
  color: #ffffff;
}

.delete-btn-wrapper {
  background-color: rgb(160, 13, 13);
  padding: 15px;
  border-radius: 30px;
  width: 15vw;
  text-align: center;
}

.delete-btn {
  text-decoration: none;
  color: #ffffff;
}

.comments {
  width: 50%;
  margin: 50px auto 0;
  background-color: #ffffff;
  padding-bottom: 20px;
}

.comment-form {
  width: 100%;
  margin: 0 auto;
}

.comment-input {
  width: 100%;
  resize: none;
}

.comment-btn-wrapper {
  width: 100%;
  text-align: end;
  margin: 10px 0;
}

.comment-btn {
  background-color: black;
  color: #ffffff;
  padding: 15px 30px;
  border: none;
  border-radius: 30px;
  cursor: pointer;
}

.comments-show-wrapper {
  margin: 0 20px;
}

.amount-of-comments {
  display: flex;
  justify-content: start;
  padding: 20px 0;
  font-size: 20px;
  font-weight: bold;
}

.comment-content-wrapper {
  margin-bottom: 16px;
}

.comment-user {
  text-decoration: none;
  color: #00BFFF;
  cursor: pointer;
}