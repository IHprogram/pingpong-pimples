.review-show {
  padding: 120px 0 50px;
  width: 100%;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
}

.review-show-wrapper {
  background-color: #f8f8f8;
  width: 800px;
  margin: 0 auto 50px;
  padding: 35px 30px;
  border: 2px solid gray;
  background-color: #ffffff;
}

<%# ユーザーのニックネームと画像 %>

.show-user-profile-wrapper {
  width: 100%;
  text-align: center;
  margin-bottom: 40px;
}

.user-profile-link {
  display: inline-block;
  text-decoration: none;
  color: #000000;
  font-size: 20px;
}

.show-user-profile {
  display: flex;
  align-items: center;
  justify-content: center;
}

.show-user-image>img,.show-default-image>img {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 10px;
}

<%# ここまでユーザーのニックネームと画像 %>

<%# レビューの内容 %>

.review-show-image {
  width: 100%;
  text-align: center;
  margin: 0 auto 40px;
}

.show-img {
  width: 400px;
  height: 400px;
  object-fit: contain;
  background-color: #a9a9a9;
}

.product-info,.user-evaluation {
  margin: 0 auto 50px;
  width: 700px;
  border-radius: 20px 20px 0 0;
  border: 1px solid #dedede;
}

.product-info-title,.user-evaluation-title,.detail-content-title {
  padding: 20px;
  border-radius: 20px 20px 0 0;
  border-bottom: none;
}

.product-info-title>h2,.user-evaluation-title>h2 {
  font-size: 30px;
  font-weight: bold;
}

.detail-table {
  width: 100%;
}

.detail-product {
  width: 25%;
  background-color: #a9a9a9;
  border: 1px solid #dedede;
  font-size: 14px;
  text-align: center;
  color: #ffffff;
}

.detail-value {
  width: 70%;
  padding: 20px;
  border: 1px solid #dedede;
  font-size: 14px;
}

.product-content {
  width: 700px;
  border-radius: 20px 20px 0 0;
  margin: 30px auto;
  border: 1px solid #dedede;
}

.detail-content {
  padding: 20px 10px;
  border-top: 1px solid #dedede;
}

.detail-content-title>h2 {
  font-size: 30px;
  font-weight: bold;
}

<%# ここまでレビューの内容 %>

<%# 編集ボタンと削除ボタン %>

.review-buttons {
  height: 60px;
  width: 60%;
  margin: 30px auto 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.edit-btn-wrapper {
  background-color: #000000;
  padding: 15px;
  border-radius: 30px;
  width: 150px;
  text-align: center;
}

.edit-btn {
  text-decoration: none;
  color: #ffffff;
  border-radius: 30px;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2);
}

.delete-btn-wrapper {
  background-color: rgb(160, 13, 13);
  padding: 15px;
  border-radius: 30px;
  width: 150px;
  text-align: center;
}

.delete-btn {
  text-decoration: none;
  color: #ffffff;
  border-radius: 30px;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2);
}

<%# ここまで編集ボタンと削除ボタン %>

<%# 動画の表示 %>

.video-wrapper {
  width: 600px;
  margin: 50px auto;
}

.video-title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.show-video {
  margin: 30px 0;
}

.show-video>video {
  width: 600px;
}

<%# ここまで動画の表示 %>

@media screen and (max-width: 959px) {
  .review-show-wrapper {
    width: 500px;
  }

  .product-info,.user-evaluation,.product-content {
    width: 440px;
  }

  .review-buttons {
    width: 80%;
  }

  .video-wrapper {
    width: 350px;
  }

  .show-video>video {
    width: 350px;
  }
}

@media screen and (max-width: 559px) {
.user-profile-link {
  font-size: 15px;
}

.show-user-image>img,.show-default-image>img {
  height: 40px;
  width: 40px;
}



  .review-show-wrapper {
    width: 300px;
  }

  .show-img {
    width: 200px;
    height: 200px;
  }

  .product-info,.user-evaluation,.product-content {
    width: 230px;
  }

  .review-buttons {
    height: 100%;
    width: 60%;
    flex-direction: column;
  }

  .edit-btn {
    margin-bottom: 30px;
  }

  .detail-product,.detail-value {
    font-size: 12px;
  }

  .product-info-title>h2,.user-evaluation-title>h2,.detail-content-title>h2 {
    font-size: 20px;
  }

  .detail-content {
    font-size: 11px;
  }

  .video-wrapper {
    width: 250px;
  }

  .show-video>video {
    width: 250px;
  }

  .edit-btn-wrapper,.delete-btn-wrapper {
    font-size: 14px;
    padding: 10px;
  }
}
