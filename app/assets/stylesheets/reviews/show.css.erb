.review-show {
  padding: 120px 0 50px;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
}

.review-show-wrapper {
  background-color: #f8f8f8;
  width: 70%;
  margin: 0 auto 50px;
  padding: 35px 30px;
  border: 2px solid gray;
  background-color: #ffffff;
  min-width: 800px;
}

<%# ユーザーのニックネームと画像 %>

.show-user-profile {
  margin-bottom: 20px;
}

.show-user-profile>a{
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  color: #000000;
  font-size: 20px;
}

.show-user-image>img,.show-default-img>image {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 10px;
}

<%# ここまでユーザーのニックネームと画像 %>

<%# レビューの内容 %>

.review-show-image {
  width: 100%;
  text-align: center;
  margin: 0 auto 40px;
}

.show-img {
  width: 400px;
  height: 400px;
  object-fit: contain;
  background-color: #a9a9a9;
}

.product-info,.user-evaluation {
  margin: 0 auto 50px;
  width: 70%;
  border-radius: 20px 20px 0 0;
  box-shadow: 5px 5px 10px 1px rgba(0, 0, 0, .5);
}

.product-info-title,.user-evaluation-title {
  padding: 20px;
  border-radius: 20px 20px 0 0;
  border-bottom: none;
}

.product-info-title>h2,.user-evaluation-title>h2 {
  font-size: 30px;
  font-weight: bold;
}

.detail-table {
  width: 100%;
}

.detail-product {
  width: 20%;
  background-color: #a9a9a9;
  border: 1px solid #dedede;
  font-size: 14px;
  text-align: center;
  color: #ffffff;
}

.detail-value {
  width: 80%;
  padding: 20px;
  border: 1px solid #dedede;
  font-size: 14px;
}

.detail-content-title {
  background-color: #eee;
  border: 1px solid #dedede;
  font-size: 14px;
}

.product-content {
  width: 70%;
  margin: 30px auto;
  border: 1px solid #dedede;
}

<%# ここまでレビューの内容 %>

<%# 編集ボタンと削除ボタン %>

.review-buttons {
  height: 60px;
  width: 50%;
  margin: 30px auto 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.edit-btn-wrapper {
  background-color: black;
  padding: 15px;
  border-radius: 30px;
  width: 15vw;
  text-align: center;
}

.edit-btn {
  text-decoration: none;
  color: #ffffff;
}

.delete-btn-wrapper {
  background-color: rgb(160, 13, 13);
  padding: 15px;
  border-radius: 30px;
  width: 15vw;
  text-align: center;
}

.delete-btn {
  text-decoration: none;
  color: #ffffff;
}

<%# ここまで編集ボタンと削除ボタン %>

<%# 動画の表示 %>

.video-wrapper {
  width: 600px;
  margin: 50px auto;
}

.video-title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.show-video {
  margin: 30px 0;
}

.show-video>video {
  width: 600px;
}

<%# ここまで動画の表示 %>