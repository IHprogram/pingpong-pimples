.login-main {
  width: 100vw;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  padding: 70px 0 50px;
}

.login-image-wrapper {
  width: 100%;
  max-width: 100%;
  height: 300px;
  background-image: url("<%= asset_path("login-image.jpg") %>");
  background-size: cover;
  background-position: center;
}

.login-form-wrapper {
  margin: 0 auto;
  width: 80%;
}

.login-form {
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  margin-top: 50px;
}

.login-form-header {
  width: 100%;
  height: 50px;
  font-size: 25px;
  text-align: center;
  padding-bottom: 20px;
  border-bottom: 1px solid #c0c0c0;
}

.login-form-contents {
  width: 80%;
  display: flex;
  flex-direction: column;
  padding: 30px 0;
}

.login-btn-wrapper {
  width: 100%;
  margin: 0 auto;
  margin-top: 40px;
  text-align: center;
}

.login-btn {
  width: 60%;
  background: rgb(3, 3, 3);
  border: 1px solid ;
  color: #fff;
  line-height: 48px;
  font-size: 20px;
  cursor: pointer;
  border-radius: 30px;
}

.user-recommend-signup {
  margin-top: 30px;
}

#guest-login {
  margin: 30px auto 0;
  width: 60%;
  background-color: #2e8b57;
  color: #ffffff;
  line-height: 48px;
  text-align: center;
  cursor: pointer;
  border-radius: 30px;
  text-decoration: none;
}

.login-flash-message {
  text-align: center;
  margin: 10px 0;
}

.login-notice,.login-alert {
  font-size: 20px;
  list-style: none;
  color: #dc143c;
}

@media screen and (max-width: 520px) {
  .login-btn,#guest-login {
    font-size: 16px;
    width: 70%;
  }
}

@media screen and (max-width: 340px) {
   .form-header-text {
    font-size: 19px;
    text-align: center;
  }

   .form-text {
    font-size: 15px;
    text-align: center;
  }
}