.login-main {
  width: 100vw;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  padding: 70px 0 50px;
}

.login-image-wrapper {
  width: 100%;
  max-width: 100%;
  height: 300px;
  background-image: url("<%= asset_path("login-image.jpg") %>");
  background-size: cover;
  background-position: center;
}

.login-form-wrapper {
  margin: 0 auto;
  width: 80%;
}

.login-form {
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  margin-top: 50px;
}

.login-form-header {
  width: 100%;
  height: 50px;
  font-size: 25px;
  text-align: center;
  padding-bottom: 20px;
  border-bottom: 1px solid #c0c0c0;
}

.login-form-contents {
  width: 80%;
  display: flex;
  flex-direction: column;
  padding: 30px 0;
}

.login-btn-wrapper {
  width: 100%;
  margin: 0 auto;
  margin-top: 40px;
  text-align: center;
}

.login-btn {
  width: 60%;
  background: rgb(3, 3, 3);
  border: 1px solid ;
  color: #fff;
  line-height: 48px;
  font-size: 20px;
  cursor: pointer;
  border-radius: 30px;
}
