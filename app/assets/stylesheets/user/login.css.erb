.login-main {
  width: 100vw;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  padding: 50px;
}

.login-form-wrapper {
  margin:0 auto;
  width: 500px;
  height: 100%;
}

.login-form {
  background-color: #ffffff;
  min-width: 500px;
  height: 100%;
  display: flex;
  justify-content: center;
  padding: 40px;
}

.login-btn {
  width: 100%;
  margin: 0 auto;
  margin-top: 40px;
  text-align: center;
}

.login-button {
  width: 60%;
  background: rgb(3, 3, 3);
  border: 1px solid ;
  color: #fff;
  line-height: 48px;
  font-size: 14px;
  cursor: pointer;
  border-radius: 30px;
}
