.mypage-main {
  padding: 120px 0 50px;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  display: flex;
  justify-content: center;
  flex-direction: column;
  min-height: 660px;
}

.mypage-content {
  background-color: #ffffff;
  width: 70%;
  margin: 0 auto;
  border: 1px solid #000000;
}

<%# ユーザー名 %>
.username-wrapper {
  text-align: center;
  margin-top: 30px;
}

.user-name {
  font-size: 30px;
  font-weight: bold;
  color: #ffffff;
}
<%# ユーザー名 %>

<%# プロフィール編集ボタン %>
.profile-edit-btn {
  text-decoration: none;
}

.profile-edit-btn-wrapper {
  width: 100%;
  height: 70px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  color: #000000;
  font-size: 20px;
  border-top: 1px solid #000000;
  border-bottom: 1px solid #000000;
}
<%# プロフィール編集ボタン %>

<%# いいね一覧リンクボタン %>
.like-link-btn {
  text-decoration: none;
}

.like-link-btn-wrapper {
  width: 100%;
  height: 70px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #000000;
  background-color: #ffffff;
  font-size: 20px;
  border-bottom: 1px solid #000000;
}
<%# いいね一覧リンクボタン %>

.profile-image-wrapper {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #000000;
  padding: 50px 0 30px;
  position: relative;
}

.profile-image {
  text-align: center;
}

.profile-image>img {
  border-radius: 50%;
  object-fit: cover;
  height: 200px;
  width: 200px;
}

.default-image {
  text-align: center;
}

.default-image>img {
  border-radius: 50%;
  object-fit: cover;
  height: 200px;
  width: 200px;
}

.self-introduction-wrapper {
  width: 100%;
  text-align: center;
  padding-bottom: 50px;
  color: #ffffff;
  background-color: #000000;
}

.review-lists-wrapper {
  padding: 30px 0;
}

.review-lists-title-wrapper {
  width: 100%;
  text-align: center;
  margin-bottom: 30px;
}

#review-lists-title {
  font-size: 30px;
  font-weight: bold;
}

<%# フォローボタン %>
.follow-btn-wrapper {
  position: absolute;
  bottom: 40px;
  right: 40px;
}

.follow-btn {
  padding: 20px;
  border-radius: 20px;
  cursor: pointer;
  background-color: rgba(0,0,255,0);
  border: 2px solid #1E90FF;
  color: #1E90FF;
  font-weight: bold;
}

.unfollow-btn {
  padding: 20px;
  border-radius: 20px;
  cursor: pointer;
  background-color: #1E90FF;
  border: none;
  color: #ffffff;
  font-weight: bold;
}
<%# フォローボタン %>
