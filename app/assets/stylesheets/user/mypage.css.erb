.mypage-main {
  padding: 50px 0;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
}

.mypage-content {
  background-color: #ffffff;
  width: 70%;
  margin: 0 auto;
  padding: 30px;
}

.username-wrapper {
  text-align: center;
  margin-bottom: 30px;
}

.user-name {
  font-size: 30px;
  font-weight: bold;
}

.like-link-wrapper {
  width: 100%;
  margin: 0 auto;
  display: flex;
  text-align: center;
  justify-content: flex-end;
  margin-bottom: 30px;
}

.like-link-btn {
  text-decoration: none;
  font-size: 20px;
  height: 40px;
  color: #ffffff;
  background-color: #000000;
  padding: 10px 50px;
  border-radius: 30px;
}