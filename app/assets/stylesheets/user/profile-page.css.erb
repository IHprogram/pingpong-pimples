.mypage-main {
  padding: 120px 0 50px;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  display: flex;
  justify-content: center;
  flex-direction: column;
  min-height: 660px;
}

.mypage-content {
  background-color: #ffffff;
  width: 700px;
  margin: 0 auto;
  border: 1px solid #000000;
}

.profile-header {
  display: flex;
  justify-content: center;
  position: relative;
}

<%# ユーザー名 %>
.username-wrapper {
  text-align: center;
  margin-top: 30px;
}

.user-name {
  font-size: 30px;
  font-weight: bold;
  color: #ffffff;
}
<%# ユーザー名 %>

<%# プロフィール編集ボタン %>
.profile-edit-link {
  text-decoration: none;
}

.profile-edit-link-wrapper {
  width: 100%;
  height: 70px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  color: #000000;
  font-size: 20px;
  border-top: 1px solid #000000;
  border-bottom: 1px solid #000000;
}
<%# プロフィール編集ボタン %>

<%# いいね一覧リンクボタン %>
.like-link-btn {
  text-decoration: none;
}

.like-link-btn-wrapper {
  width: 100%;
  height: 70px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #000000;
  background-color: #ffffff;
  font-size: 20px;
  border-bottom: 1px solid #000000;
}
<%# いいね一覧リンクボタン %>

.profile-wrapper {
  height: 100%;
  width: 100%;
  background-color: #000000;
  padding: 30px 15px 15px;
  position: relative;
}

.image-and-name {
  width: 150px;
  margin-bottom: 15px;
}

.profile-image {
  text-align: center;
}

.profile-image>img {
  border-radius: 50%;
  object-fit: cover;
  height: 150px;
  width: 150px;
}

.default-image {
  text-align: center;
}

.default-image>img {
  border-radius: 50%;
  object-fit: cover;
  height: 200px;
  width: 200px;
}

.self-introduction-wrapper {
  max-width: 90%;
  color: #ffffff;
  background-color: #000000;
  margin: 30px auto 0;
}

.review-lists-wrapper {
  padding: 40px 30px;
}

.review-lists-title-wrapper {
  width: 100%;
  text-align: center;
  padding-bottom: 20px;
  margin-bottom: 30px;
}

#review-lists-title {
  font-size: 30px;
  font-weight: bold;
}

<%# フォローボタン %>
.follow-btn-wrapper {
  position: absolute;
  top: 30px;
  right: 30px;
  height: 45px;
}

.follow-btn {
  padding: 20px;
  border-radius: 20px;
  cursor: pointer;
  background-color: rgba(0,0,255,0);
  border: 2px solid #1E90FF;
  color: #1E90FF;
  font-weight: bold;
}

.unfollow-btn {
  padding: 20px;
  border-radius: 20px;
  cursor: pointer;
  background-color: #1E90FF;
  border: none;
  color: #ffffff;
  font-weight: bold;
}
<%# フォローボタン %>

.follow-and-follower {
  color:#ffffff;
  width: 40%;
  height: 90px;
  display: flex;
  justify-content: space-around;
  margin: 0 auto;
}

.followings-number-wrapper,.followers-number-wrapper {
  width: 90px;
  height: 90px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  border-radius: 50%;
  cursor: pointer;
}

.follow-number {
  font-size: 30px;
  margin-bottom: 10px;
}

.followings-wrapper,.followers-wrapper {
  width: 100%;
  height: 0;
  overflow-y: hidden;
  position: relative;
}

#followings-close-btn,#followers-close-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  color: #dc143c;
  font-size: 15px;
  cursor: pointer;
  border: 1px solid #dc143c;
  padding: 10px;
}

.open-follow {
  height: 100%;
}

.follow-group {
  margin: 20px 40px;
}

.followers-wrapper {
  border-top: 1px solid #000000;
  border-bottom: 1px solid #000000;
}

.follow-title {
  margin-bottom: 20px;
}

.follow-list {
  padding: 10px 0;
  border-top: 1px dashed gray;
  border-bottom: 1px dashed gray;
}

.follow-list + .follow-list {
  border-top: none;
}

.follow-users {
  display: inline-block;
}

.follow-users>a {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: #000000;
}

.follow-profile-image>img {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  object-fit: cover;
}

.follow-default-image>img {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  object-fit: cover;
  background-color: #ffffff;
}

.link-btns {
  margin-right: 10px;
}

@media screen and (max-width: 959px) {
  .mypage-content {
    width: 500px;
  }

  .follow-btn-wrapper {
    position: absolute;
    top: 30px;
    right: 15px;
  }
}

@media screen and (max-width: 559px) {
  .mypage-content {
    width: 300px;
  }

  .profile-wrapper {
    padding: 30px 15px;
  }

  .image-and-name {
    width: 100%;
  }

  .profile-image>img {
    height: 90px;
    width: 90px;
  }

  .username-wrapper {
    margin-top: 15px;
  }

  .user-name {
    font-size: 20px;
  }

  .follow-and-follower {
    width: 53%;
    height: 60px;
    margin: 0 0 0 20px;
  }

  .follow-number {
    font-size: 20px;
  }

  .followings-number-wrapper,.followers-number-wrapper {
    width: 70px;
    height: 70px;
    font-size: 12px;
  }

  .followings-number-wrapper {
    margin-right: 12px;
  }

  .follow-btn-wrapper {
    position: absolute;
    top: 183px;
    right: 15px;
  }

  .follow-btn,.unfollow-btn {
    padding: 12px;
  }

  .self-introduction {
    font-size: 12px;
  }
}