.registration-main {
  width: 100vw;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  padding: 70px 0 50px;
}

.registration-form-wrapper {
  margin: 50px auto 0px;
  width: 80%;
  height: 100%;
}

.registration-form {
  background-color: #ffffff;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.form-wrap {
  width: 100%;
}

.form-header {
  width: 100%;
  height: 50px;
  font-size: 25px;
  text-align: center;
  border-bottom: 1px solid #c0c0c0;
  padding-bottom: 20px;
}

.form-header-text {
  font-weight: bold;
}

.form-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 30px auto 0;
  text-align: center;
}

.form-text {
  font-size: 20px;
  font-weight: bold;
}

.input-default {
  width: 100%;
  margin-top: 10px;
  height: 48px;
  padding: 10px 16px 8px;
  border-radius: 4px;
  border: 1px solid rgb(158, 155, 155);
  background: #fff;
  font-size: 16px;
  resize: none;
}

.register-btn-wrapper {
  margin-top: 40px;
  text-align: center;
}

.register-btn {
  width: 60%;
  background: rgb(3, 3, 3);
  color: #fff;
  line-height: 53px;
  font-size: 20px;
  cursor: pointer;
  border-radius: 30px;
}

