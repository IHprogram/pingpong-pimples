.registration-main {
  width: 100vw;
  background-image: url("<%= asset_path("back-img.jpg") %>");
  background-size: cover;
  padding: 50px;
}

.registration-form-wrapper {
  margin:0 auto;
  width: 500px;
  height: 100%;
}

.registration-form {
  background-color: #ffffff;
  min-width: 500px;
  height: 100%;
  display: flex;
  justify-content: center;
  padding: 40px;
}

.form-wrap {
  width: 80%;
}

.form-header {
  width: 100%;
  height: 30px;
  font-size: 25px;
  text-align: center;
  margin-bottom: 40px;
}

.form-header-text {
  font-weight: bold;
}

.form-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 30px auto 0;
  text-align: center;
}

.form-text {
  font-size: 20px;
  font-weight: bold;
}

.input-default {
  width: 100%;
  margin-top: 10px;
  height: 48px;
  padding: 10px 16px 8px;
  border-radius: 4px;
  border: 1px solid rgb(158, 155, 155);
  background: #fff;
  font-size: 16px;
  resize: none;
}

.register-btn {
  margin-top: 40px;
  text-align: center;
}

.register-button {
  width: 60%;
  background: rgb(3, 3, 3);
  border: 1px solid ;
  color: #fff;
  line-height: 53px;
  font-size: 20px;
  cursor: pointer;
  border-radius: 30px;
}
