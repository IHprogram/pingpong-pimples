<%= render "shared/header" %>

<div class="login-main">
  <div class="login-image-wrapper"></div>
  <div class="login-form-wrapper">
    <%= form_with model: @user,url: user_session_path, class: 'login-form', local: true do |f| %>
      <div class='login-form-contents'>
        <div class='login-form-header'>
          <h1 class='form-header-text'>
            - ログイン -
          </h1>
        </div>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">メールアドレス</label>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
        </div>
        <div class='login-btn-wrapper'>
          <%= f.submit "ログイン" ,class:"login-btn" %>
        </div>
        <%= link_to users_guest_sign_in_path, method: :post, id: "guest-login" do %>
          <div id="guest-login-btn">
            ゲストログイン（閲覧用）
          </div>
        <% end %>
        <div class="user-recommend-signup">
          <p>
            未登録の方は
            <span>
              <%= link_to "こちら", new_user_registration_path %>
            </span>
            <br>
            またはゲストログインをお試しください。
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>