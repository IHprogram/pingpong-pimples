              TSP
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '5' %>
              Yasaka
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '6' %>
              VICTAS
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '7' %>
              ミズノ
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '8' %>
              紅双喜
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '9' %>
              XIOM
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '10' %>
              STIGA
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '11' %>
