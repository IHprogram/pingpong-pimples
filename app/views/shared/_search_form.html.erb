<div class="search-content">
  <div class="search-title">
    <h3>- レビュー検索 -</h3>
  </div>
  <div class="search-form">
    <%= search_form_for @search, url: search_reviews_path, class: "search-form" do |form| %>
      <div class="search-input-wrapper">
        <%= form.search_field :name_cont, placeholder: "商品名を入力してください", class: "search-input" %>
        <%= button_tag type: "submit", class: "search-btn" do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>

      <div class="search-group-wrapper">
        <%# ラバーの種類 %>
        <div class="search-group">
          <div class="search-label">
            <%= form.label :type_id_eq, 'ラバーの種類' %>
          </div>
          <div class="search-border"></div>
          <div class="search-select-wrapper" id="type-select">
            <div class="search-select">
              <%= form.radio_button :type_id_eq, '' %>
              指定なし
            </div>
            <div class="search-select">
              <%= form.radio_button :type_id_eq, '2' %>
              裏ソフト
            </div>
            <div class="search-select">
              <%= form.radio_button :type_id_eq, '3' %>
              表ソフト
            </div>
            <div class="search-select">
              <%= form.radio_button :type_id_eq, '4' %>
              粒高
            </div><div class="search-select">
              <%= form.radio_button :type_id_eq, '5' %>
              アンチ
            </div><div class="search-select">
              <%= form.radio_button :type_id_eq, '6' %>
              一枚
            </div>
            <div class="search-select">
              <%= form.radio_button :type_id_eq, '7' %>
              ラージ用
            </div>
          </div>
        </div>
        <%# /ラバーの種類 %>

        <%# メーカー %>
        <div class="search-group">
          <div class="search-label">
            <%= form.label :manufacture_id_eq, 'メーカー' %>
          </div>
          <div class="search-border"></div>
          <div class="search-select-wrapper" id="manufacture-select">
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '' %>
              指定なし
            </div>
            <div class="search-select">
