            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '20' %>
              アバロックス
            </div>
            <div class="search-select">
              <%= form.radio_button :manufacture_id_eq, '21' %>
              その他
            </div>
          </div>
        </div>
